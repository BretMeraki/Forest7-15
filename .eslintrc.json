{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "warn",
    "no-var": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "no-trailing-spaces": "error",
    "eol-last": "error",
    "no-multiple-empty-lines": ["error", { "max": 2 }],
    "indent": ["error", 2],
    "brace-style": ["error", "1tbs"],
    "comma-dangle": ["error", "never"],
    "no-undef": "error",
    "no-unreachable": "error",
    "no-unexpected-multiline": "error",
    "no-regex-spaces": "error",
    "valid-typeof": "error",
    "no-unsafe-negation": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "*.min.js",
    "build/",
    "dist/"
  ]
}
